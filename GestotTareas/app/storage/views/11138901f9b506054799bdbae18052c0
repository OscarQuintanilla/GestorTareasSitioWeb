  <script type="text/javascript">

     $(document).ready(function(){

       $('#mostrar_contrasena').click(function () {
          if ($('#mostrar_contrasena').is(':checked')) {
            $('#contra').attr('type', 'text');
          } else {
            $('#contra').attr('type', 'password');
          }
        });

      });
    </script>

