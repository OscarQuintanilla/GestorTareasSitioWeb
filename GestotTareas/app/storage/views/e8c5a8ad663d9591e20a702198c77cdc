<script type="text/javascript">
  $('#boton_busqueda').click(function(){

    var tipoBpu = $("#tipo_busqueda_general option:selected").html();
    var textBpu = $('#textoBusqueda').val();

      $.post('reporte_precioUnitarioB', {tipoBpu: tipoBpu, textBpu: textBpu}, function(data){

        $('#textoBusqueda').val('');
        $("#ContenedorPU").html(data);
        
      });

  });

</script>


